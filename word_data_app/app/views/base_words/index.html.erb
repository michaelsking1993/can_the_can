<p id="notice"><%= notice %></p>

<h1>Base Words</h1>

<table>
  <thead>
    <tr>
      <th>Base word</th>
      <th>Pos</th>
      <th>Frequency</th>
      <th>Language</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @base_words.each do |base_word| %>
      <tr>
        <td><%= base_word.base_word %></td>
        <td><%= base_word.pos %></td>
        <td><%= base_word.frequency %></td>
        <td><%= base_word.language %></td>
        <td><%= link_to 'Show', base_word %></td>
        <td><%= link_to 'Edit', edit_base_word_path(base_word) %></td>
        <td><%= link_to 'Destroy', base_word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

